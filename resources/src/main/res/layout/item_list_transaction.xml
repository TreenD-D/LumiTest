<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/baseline_grid_tiny"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/confirmDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?textAppearanceBody2"
        android:gravity="start"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12/21/5343" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/senderAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?textAppearanceBody2"
        android:ellipsize="end"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirmDate"
        tools:text="0xsdfmkdsnfgkdfns" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/recieverAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?textAppearanceBody2"
        android:ellipsize="end"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/senderAddress"
        tools:text="0xdfsfndjn" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/amountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?textAppearanceBody2"
        android:ellipsize="end"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recieverAddress"
        tools:text="1235345645 ETH" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/typeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?textAppearanceBody2"
        android:ellipsize="end"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amountText"
        tools:text="Income" />

</androidx.constraintlayout.widget.ConstraintLayout>